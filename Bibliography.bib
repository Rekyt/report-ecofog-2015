	year = {2010},
	keywords = {functional diversity, important, leaf economics, multiple factor analysis, plant strategies, plant traits, tropical forest, wood density},
	pages = {1338--1347},
	file = {Full Text PDF:/Users/Rekyt/Library/Application Support/Firefox/Profiles/vkw1imse.default-1412076110318/zotero/storage/Z6QZ2IZR/Baraloto et al. - 2010 - Decoupled leaf and stem economics in rain forest t.pdf:application/pdf;Snapshot:/Users/Rekyt/Library/Application Support/Firefox/Profiles/vkw1imse.default-1412076110318/zotero/storage/RHG8G9VP/abstract.html:text/html}
