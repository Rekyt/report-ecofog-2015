	file = {Full Text PDF:/Users/Rekyt/Library/Application Support/Firefox/Profiles/vkw1imse.default-1412076110318/zotero/storage/E8ZTD8DP/Violle et Jiang - 2009 - Towards a trait-based quantification of species ni.pdf:application/pdf;Snapshot:/Users/Rekyt/Library/Application Support/Firefox/Profiles/vkw1imse.default-1412076110318/zotero/storage/7WB6ZTHD/87.html:text/html}
